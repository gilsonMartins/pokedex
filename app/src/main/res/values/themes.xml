<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PockedexNoTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextViewAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextViewAppearanceTitle" parent="TextViewAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="CardViewAppearanceTitle" parent="CardView">
        <item name="android:elevation">20dp</item>
        <item name="android:layout_marginTop">12sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">12dp</item>

    </style>

    <style name="CardTypePockemonAppearance" parent="CardView">
        <item name="android:background">@color/bg_type</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PockedexNoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PockedexNoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PockedexNoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
